# Use an official Python image as base
FROM python:3.12-slim

# Set environment variables to prevent Python from buffering stdout/stderr
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Set the working directory
WORKDIR /app

# Copy requirement files and install dependencies for testing
COPY requirements/common.txt requirements/frontend.txt requirements/testing_frontend.txt ./requirements/
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements/frontend.txt && \
    pip install --no-cache-dir -r requirements/testing_frontend.txt

# Copy the frontend application code
COPY src/frontend/ /app/

# Expose the Streamlit port
EXPOSE 8501

# Default command to run frontend tests
CMD ["pytest", "--tb=short", "--disable-warnings", "/app/tests"]
